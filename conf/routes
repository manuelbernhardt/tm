# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /                                       module:secure

GET     /                                       Dashboard.index
GET     /approach                               Approach.index
GET     /defects                                Defects.index
GET     /profile                                profile.Profile.index
POST    /profile/edit                           profile.Profile.edit

*     /admin/accounts                         module:crud

GET     /admin                                  admin.Users.index
GET     /admin/users                            admin.Users.index
GET     /admin/users/data                       admin.Users.data
POST    /admin/users/edit                       admin.Users.edit

# Tree
GET     /tree                                   tree.TreeController.getChildren
POST    /tree/create                            tree.TreeController.create
POST    /tree/rename                            tree.TreeController.rename
POST    /tree/move                              tree.TreeController.move
DELETE  /tree/remove                            tree.TreeController.remove

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
